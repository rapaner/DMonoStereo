<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DMonoStereo.MainPage"
             Title="Главная"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="🎶 Моя музыкальная библиотека"
                   Style="{StaticResource PageTitleStyle}"
                   HorizontalOptions="Center" />

            <Button Text="Добавить альбом"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalOptions="FillAndExpand"
                    Clicked="OnAddAlbumClicked" />

            <Grid ColumnDefinitions="*,*"
                  RowDefinitions="Auto,Auto"
                  ColumnSpacing="15"
                  RowSpacing="15">

                <Border Grid.Row="0" Grid.Column="0"
                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                        StrokeThickness="0"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAllArtistsTapped" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="🎤" FontSize="36" HorizontalOptions="Center" />
                        <Label Text="Все исполнители"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource PrimaryTextColor}" />
                        <Label x:Name="ArtistsCountLabel"
                               FontSize="12"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="0" Grid.Column="1"
                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                        StrokeThickness="0"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAllAlbumsTapped" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="💿" FontSize="36" HorizontalOptions="Center" />
                        <Label Text="Все альбомы"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource PrimaryTextColor}" />
                        <Label x:Name="AlbumsCountLabel"
                               FontSize="12"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="1" Grid.Column="0"
                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                        StrokeThickness="0"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAllTracksTapped" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="🎵" FontSize="36" HorizontalOptions="Center" />
                        <Label Text="Все треки"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource PrimaryTextColor}" />
                        <Label x:Name="TracksCountLabel"
                               FontSize="12"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="1" Grid.Column="1"
                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                        StrokeThickness="0"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSettingsTapped" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="⚙️" FontSize="36" HorizontalOptions="Center" />
                        <Label Text="Настройки"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource PrimaryTextColor}" />
                        <Label x:Name="SettingsDescriptionLabel"
                               Text="Управление приложением"
                               FontSize="12"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>