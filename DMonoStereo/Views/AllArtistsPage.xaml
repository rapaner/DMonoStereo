<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:DMonoStereo.ViewModels"
             xmlns:converters="clr-namespace:DMonoStereo.Converters"
             xmlns:views="clr-namespace:DMonoStereo.Views"
             x:Class="DMonoStereo.Views.AllArtistsPage"
             x:DataType="views:AllArtistsPage"
             Title="Все исполнители"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Добавить" Priority="0" Order="Primary" Clicked="OnAddArtistClicked" />
    </ContentPage.ToolbarItems>

    <Grid Padding="20" RowDefinitions="Auto,Auto,*" RowSpacing="15">
        <SearchBar x:Name="FilterSearchBar"
                   Grid.Row="0"
                   Placeholder="Фильтр по исполнителям"
                   TextChanged="OnFilterTextChanged" />

        <Picker x:Name="SortPicker"
                Grid.Row="1"
                ItemsSource="{Binding SortOptions}"
                SelectedItem="{Binding SelectedSortOption}"
                ItemDisplayBinding="{Binding DisplayName}"
                Title="Сортировка"
                SelectedIndexChanged="OnSortOptionChanged" />

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Artists}"
                        SelectionMode="Single"
                        SelectionChanged="OnArtistSelected"
                        RemainingItemsThreshold="2"
                        RemainingItemsThresholdReached="OnRemainingItemsThresholdReached">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="15" />
            </CollectionView.ItemsLayout>
            <CollectionView.EmptyView>
                <Label Text="Исполнители не найдены"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{DynamicResource SecondaryTextColor}" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:ArtistViewModel">
                    <Border StrokeThickness="0"
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Border Grid.Column="0"
                                    WidthRequest="64"
                                    HeightRequest="64"
                                    Padding="0"
                                    BackgroundColor="{DynamicResource PageBackgroundColor}"
                                    IsVisible="{Binding HasCoverImage}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="15" />
                                </Border.StrokeShape>
                                <Image Source="{Binding CoverImage, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                       Aspect="AspectFill"
                                       HeightRequest="64"
                                       WidthRequest="64" />
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18" />
                                <Label Text="{Binding AlbumCount, StringFormat='Альбомов: {0}'}" FontSize="14" TextColor="{DynamicResource SecondaryTextColor}" />
                                <Label Text="{Binding TrackCount, StringFormat='Треков: {0}'}" FontSize="14" TextColor="{DynamicResource SecondaryTextColor}" />
                                <Label Text="{Binding RatedTracksText}" FontSize="14" TextColor="{DynamicResource SecondaryTextColor}" />
                            </VerticalStackLayout>

                            <Label Grid.Column="2"
                                   Text="{Binding AverageTrackRating, StringFormat='♪ {0:F2}'}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center"
                                   IsVisible="{Binding HasAverageTrackRating}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>