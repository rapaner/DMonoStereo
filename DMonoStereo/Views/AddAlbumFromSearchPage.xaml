<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:DMonoStereo.Views"
             xmlns:viewModels="clr-namespace:DMonoStereo.ViewModels"
             xmlns:converters="clr-namespace:DMonoStereo.Converters"
             x:Class="DMonoStereo.Views.AddAlbumFromSearchPage"
             x:DataType="views:AddAlbumFromSearchPage"
             Title="Добавление альбома"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Изображение исполнителя -->
            <Border Style="{StaticResource CardStyle}" 
                    Padding="0" 
                    HeightRequest="200"
                    HorizontalOptions="Center"
                    WidthRequest="200">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15" />
                </Border.StrokeShape>
                <Grid>
                    <Image x:Name="ArtistImage"
                           Source="{Binding ArtistImageData, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                           Aspect="AspectFill"
                           BackgroundColor="{DynamicResource PageBackgroundColor}" />
                    <Label x:Name="NoArtistImageLabel"
                           Text="Изображение исполнителя отсутствует"
                           TextColor="{DynamicResource SecondaryTextColor}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           IsVisible="False" />
                </Grid>
            </Border>

            <!-- Имя исполнителя -->
            <Label Text="Исполнитель"
                   Style="{StaticResource SectionTitleStyle}" />
            <Entry x:Name="ArtistNameEntry"
                   Style="{StaticResource EntryStyle}"
                   Text="{Binding ArtistName, Mode=TwoWay}"
                   Placeholder="Имя исполнителя" />

            <!-- Информация об альбоме -->
            <Label Text="Название альбома"
                   Style="{StaticResource SectionTitleStyle}" />
            <Entry x:Name="AlbumTitleEntry"
                   Style="{StaticResource EntryStyle}"
                   Text="{Binding AlbumTitle, Mode=TwoWay}"
                   Placeholder="Название альбома" />

            <Label Text="Год выпуска"
                   Style="{StaticResource SectionTitleStyle}" />
            <Entry x:Name="YearEntry"
                   Style="{StaticResource EntryStyle}"
                   Text="{Binding Year, Mode=TwoWay}"
                   Keyboard="Numeric"
                   Placeholder="Год (например, 1969)" />

            <!-- Обложка альбома -->
            <Label Text="Обложка альбома"
                   Style="{StaticResource SectionTitleStyle}" />
            <Border Style="{StaticResource CardStyle}" 
                    Padding="0" 
                    HeightRequest="200">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15" />
                </Border.StrokeShape>
                <Grid>
                    <Image x:Name="CoverImage"
                           Source="{Binding CoverImageData, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                           Aspect="AspectFill"
                           BackgroundColor="{DynamicResource PageBackgroundColor}" />
                    <Label x:Name="NoCoverImageLabel"
                           Text="Обложка отсутствует"
                           TextColor="{DynamicResource SecondaryTextColor}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           IsVisible="False" />
                </Grid>
            </Border>

            <!-- Список треков -->
            <Label Text="Треки"
                   Style="{StaticResource SectionTitleStyle}" />
            <CollectionView ItemsSource="{Binding Tracks}"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                </CollectionView.ItemsLayout>
                <CollectionView.EmptyView>
                    <Label Text="Треки не найдены"
                           TextColor="{DynamicResource SecondaryTextColor}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:EditableTrackViewModel">
                        <Border StrokeThickness="0"
                                BackgroundColor="{DynamicResource CardBackgroundColor}"
                                Padding="15">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15" />
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="10">
                                <HorizontalStackLayout Spacing="10">
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              VerticalOptions="Center" />
                                    <Label Text="{Binding Position, StringFormat='#{0}'}"
                                           FontAttributes="Bold"
                                           FontSize="14"
                                           VerticalOptions="Center"
                                           WidthRequest="40" />
                                    <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                        <Entry Text="{Binding Title}"
                                               Placeholder="Название трека"
                                               Style="{StaticResource EntryStyle}" />
                                        <Entry Text="{Binding Duration}"
                                               Placeholder="Длительность (мм:сс)"
                                               Keyboard="Text"
                                               Style="{StaticResource EntryStyle}" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Кнопка добавления альбома -->
            <Button Text="Добавить альбом"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Clicked="OnAddAlbumClicked"
                    Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

