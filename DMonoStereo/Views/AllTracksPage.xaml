<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:DMonoStereo.ViewModels"
             xmlns:views="clr-namespace:DMonoStereo.Views"
             x:Class="DMonoStereo.Views.AllTracksPage"
             x:DataType="views:AllTracksPage"
             Title="Все треки"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid Padding="20" RowDefinitions="Auto,Auto,*" RowSpacing="15">
        <SearchBar x:Name="FilterSearchBar"
                   Grid.Row="0"
                   Placeholder="Фильтр по трекам"
                   TextChanged="OnFilterTextChanged" />

        <Picker x:Name="SortPicker"
                Grid.Row="1"
                ItemsSource="{Binding SortOptions}"
                SelectedItem="{Binding SelectedSortOption}"
                ItemDisplayBinding="{Binding DisplayName}"
                Title="Сортировка"
                SelectedIndexChanged="OnSortOptionChanged" />

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Tracks}"
                        SelectionMode="Single"
                        SelectionChanged="OnTrackSelected"
                        RemainingItemsThreshold="0"
                        RemainingItemsThresholdReached="OnRemainingItemsThresholdReached">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
            </CollectionView.ItemsLayout>
            <CollectionView.EmptyView>
                <Label Text="Треки не найдены"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{DynamicResource SecondaryTextColor}" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:TrackListItemViewModel">
                    <Border StrokeThickness="0"
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="15">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16" />
                                <Label Text="{Binding ArtistName}"
                                       FontSize="14"
                                       TextColor="{DynamicResource SecondaryTextColor}" />
                                <Label Text="{Binding AlbumName}"
                                       FontSize="14"
                                       TextColor="{DynamicResource SecondaryTextColor}" />
                                <Label Text="{Binding DurationText}"
                                       FontSize="12"
                                       TextColor="{DynamicResource SecondaryTextColor}" />
                            </VerticalStackLayout>

                            <Label Grid.Column="1"
                                   Text="{Binding RatingText}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center"
                                   IsVisible="{Binding HasRating}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>