<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="DMonoStereo.Resources.Styles.ColorsDark">

    <!-- Основные цвета -->
    <Color x:Key="PrimaryColor">#EDE3CB</Color>
    <Color x:Key="SecondaryColor">#B9B19D</Color>
    <Color x:Key="TertiaryColor">#3C7A58</Color>

    <!-- Фоновые цвета -->
    <Color x:Key="PageBackgroundColor">#0E1913</Color>
    <Color x:Key="CardBackgroundColor">#1C2B21</Color>

    <!-- Текстовые цвета -->
    <Color x:Key="PrimaryTextColor">#EDE3CB</Color>
    <Color x:Key="SecondaryTextColor">#5B6C5E</Color>

    <!-- Статусные цвета -->
    <Color x:Key="SuccessColor">#3C7A58</Color>
    <Color x:Key="WarningColor">#D7A94B</Color>
    <Color x:Key="ErrorColor">#C65A4A</Color>

    <!-- Дополнительные цвета для совместимости -->
    <Color x:Key="Primary">#EDE3CB</Color>
    <Color x:Key="Secondary">#B9B19D</Color>
    <Color x:Key="Tertiary">#3C7A58</Color>
    <Color x:Key="AccentColor">#284432</Color>

    <!-- Оттенки серого -->
    <Color x:Key="Gray100">#1C2B21</Color>
    <Color x:Key="Gray200">#2A3D30</Color>
    <Color x:Key="Gray300">#3E5444</Color>
    <Color x:Key="Gray400">#5B6C5E</Color>
    <Color x:Key="Gray500">#7E8C7E</Color>
    <Color x:Key="Gray600">#A9B0A3</Color>
    <Color x:Key="Gray900">#EDE3CB</Color>
</ResourceDictionary>